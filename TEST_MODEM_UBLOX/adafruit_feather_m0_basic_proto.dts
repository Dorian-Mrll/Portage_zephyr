/dts-v1/;
#include <atmel/samd21.dtsi>

#include "feather_connector.dtsi"

/ {	
	model = "Adafruit Feather M0 Basic Proto";
	compatible = "adafruit,feather-m0-basic-proto", "atmel,samd21g18a",
			"atmel,samd21";

	chosen {
		zephyr,console = &sercom5;
		zephyr,shell-uart = &sercom5;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		led3 = &led3;
		/*sara1 = &sara1;
		sara2 = &sara2;*/
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&porta 14 0>;
			label = "RED_LED";
		};
		led1: led_1 {
			gpios = <&porta 15 0>;
			label = "BLUE_LED";
		};
		led2: led_2 {
			gpios = <&porta 16 0>;
			label = "GREEN_LED";
		};
		led3: led_3 {
			gpios = <&porta 17 0>;
			label = "LED";
		};
	};
	
	/*sara_r412m {
		compatible = "ublox,sara-r4";
		sara1: sara_1 {
			gpios = <&porta 4 0>;
			label = "SARA_ENABLE";
		};
		sara2: sara_2 {
			gpios = <&portb 10 0>;
			label = "SARA_R4XX_TOGGLE";
		};	
	};*/
};

&cpu0 {
	clock-frequency = <48000000>;
};

&sercom2 {
	status = "okay";
	compatible = "atmel,sam0-uart";
	current-speed = <115200>;
	rxpo = <1>;
	txpo = <0>;

	pinctrl-0 = <&pa13c_sercom2_pad1 &pa12c_sercom2_pad0>;
	
	sara_r4 {
		compatible = "u-blox,sara-r4";
		label = "ublox-sara-r4";
		status = "okay";

		mdm-power-gpios = <&porta 4 0>;
		mdm-vint-gpios = <&portb 10 0>;
	};
};

&sercom3 {
	status = "okay";
	compatible = "atmel,sam0-i2c";
	clock-frequency = <I2C_BITRATE_FAST>;
	#address-cells = <1>;
	#size-cells = <0>;
};

&sercom4 {
	status = "okay";
	compatible = "atmel,sam0-spi";
	#address-cells = <1>;
	#size-cells = <0>;
	dipo = <0>;
	dopo = <1>;
};

&sercom5 {
	status = "okay";
	compatible = "atmel,sam0-uart";
	current-speed = <115200>;
	rxpo = <1>;
	txpo = <0>;

	pinctrl-0 = <&pb3d_sercom5_pad1 &pb2d_sercom5_pad0>;
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "sam-ba";
			reg = <0x00000000 0x2000>;
			read-only;
		};

		code_partition: partition@2000 {
			label = "code";
			reg = <0x2000 0x3A000>;
			read-only;
		};

		/*
		 * The final 16 KiB is reserved for the application.
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@3c000 {
			label = "storage";
			reg = <0x0003c000 0x00004000>;
		};
	};
};

&usb0 {
	status = "okay";
};
